{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Orders",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "customer_name": {
      "type": "string",
      "required": true
    },
    "shipping_address": {
      "type": "text",
      "required": true
    },
    "vendor": {
      "model": "vendors"
    },
    "order_number": {
      "type": "string",
      "unique": true
    },
    "order_status": {
      "type": "enumeration",
      "enum": [
        "PREPARING",
        "DELIVERING",
        "COMPLETED"
      ],
      "default": "PREPARING"
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "COD",
        "CREDIT_CARD",
        "PAYPAL"
      ],
      "required": true
    },
    "invoice_amount": {
      "type": "decimal"
    },
    "delivery_tracking_number": {
      "type": "string"
    },
    "order_items": {
      "type": "component",
      "repeatable": true,
      "component": "order-item.order-item"
    },
    "note": {
      "type": "richtext"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    }
  }
}
