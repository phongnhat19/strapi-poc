{
  "kind": "collectionType",
  "collectionName": "vendors",
  "info": {
    "name": "Vendors",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "products": {
      "collection": "product",
      "via": "vendor"
    },
    "owner": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "vendors"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "ACTIVE",
        "INACTIVE",
        "PENDING"
      ],
      "default": "PENDING"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "address": {
      "type": "text"
    }
  }
}
