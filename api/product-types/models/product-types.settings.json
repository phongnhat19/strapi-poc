{
  "kind": "collectionType",
  "collectionName": "product_types",
  "info": {
    "name": "Product Types",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "color": {
      "type": "string",
      "default": "#4287f5"
    },
    "product": {
      "model": "product",
      "via": "product_types"
    },
    "vendor": {
      "model": "vendors"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "PENDING",
        "ACTIVE",
        "INACTIVE"
      ],
      "default": "PENDING",
      "required": true
    }
  }
}
