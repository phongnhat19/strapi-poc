{
  "kind": "collectionType",
  "collectionName": "product_types",
  "info": {
    "name": "Product Types",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "color": {
      "type": "string",
      "default": "#4287f5",
      "regex": "/^#([0-9a-f]{3}){1,2}$/i"
    },
    "product": {
      "via": "product_types",
      "model": "product"
    }
  }
}
