{
  "kind": "collectionType",
  "collectionName": "product",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 10000
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "availability": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "product_types": {
      "columnName": "product_types",
      "collection": "product-types",
      "via": "product"
    },
    "vendor": {
      "via": "products",
      "model": "vendors"
    },
    "info": {
      "type": "richtext"
    }
  }
}
